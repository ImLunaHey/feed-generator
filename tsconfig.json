{
  "compilerOptions": {
    "lib": ["ESNext"],
    "outDir": "dist",
    "module": "Node16",
    "target": "ES6",
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts", "src/v2/firehose.mts", "src/v2/db.ts", "src/v2/app.mts"],
  "exclude": ["node_modules"]
}
